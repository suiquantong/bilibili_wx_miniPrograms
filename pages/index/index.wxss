page{
  color:#666;
  padding: 10rpx;
}

/* 导航 */
.nav_wrap{
}
.nav{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item.active{
  border-bottom: 5rpx solid #f45a8d;
}

/* 轮播 */
.slider{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
}
.slider  swiper{
  height: 220rpx;
}
.slider  navigator{
  height: 100%;
  width: 100%;
}
.slider  image{
  height: 100%;
  width: 100%;
}

/* 视频列表 */
.video_wrap{
  display: flex;
  flex-wrap:wrap;
  padding:5rpx;
  justify-content: space-between;
}
.video_item{
  width: 48%;
  margin-bottom: 20rpx;
}
.video_img{
  position: relative;
}
.video_img image{
  width: 100%;
  border-radius: 15rpx;
}
.video_img .video_info {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}

/* 文本只显示两行 超出用省略代替写法 
   以后需要可以直接copy ！！！
*/
.video_title{
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}